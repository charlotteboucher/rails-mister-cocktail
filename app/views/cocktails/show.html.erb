<h1>Cocktail <%= @cocktail.name %> : </h1>

<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %> of <%= dose.ingredient.name %></p>
<%= link_to "Delete this ingredient", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back to cocktails list", cocktails_path %>
